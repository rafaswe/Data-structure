#include<stdio.h>
int main()
{
    int a[20],e,el,pos,i;
    printf("How many elements in that array ? ");
    scanf("%d",&e);
       for(int i=0;i<e;i++)
       scanf("%d",&a[i]);
    printf("Enter the position : ");
    scanf("%d",&pos);
    for(int i=pos-1;i<e-1;i++)
        a[i]=a[i+1];
    printf("New array : \n");
      for(int i=0;i<e-1;i++)
       printf("%d\n",a[i]);

}
